<%= form_tag search_path, url: "", html: { method: :get } do %>
  Search Key
  <div id="search_key">
    <%= text_field_tag "key" %> <br />
  </div>
  <div id="submit_search">
    <%= submit_tag "Submit" %>
  </div>
<% end %>
<% @products.each do |product| %>
  <div class="entry">
    <%= link_to( image_tag(product.image_url), line_items_path(:product_id => product),html_options = {:method => :post, :remote => true} )%>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price"><%= number_to_currency(product.price)  %></span>
      <%= button_to 'Buy', line_items_path(:product_id => product),
  :remote => true %>
    </div>
  </div>
<% end %>

